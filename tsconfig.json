{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "declaration": true,
    "outDir": "./dist",
    "lib": ["es6", "dom"],
    "typeRoots": [
      "../node_modules/@types"
    ]
  },
  "types": ["jest", "node"],
  "exclude": [
      "node_modules"
    ]
}
